#@name role_alter
PUT http://0.0.0.0:5000/role/<string:role_id>
content-type: application/json
Authorization: {{token}}

{
  "name": "Some string"
}

###
#@name role_inactivate
DELETE http://0.0.0.0:5000/role/<string:role_id>
content-type: application/json
Authorization: {{token}}

###
#@name role_activate
POST http://0.0.0.0:5000/role/activate
content-type: application/json
Authorization: {{token}}

{
  "id": "UUID as string"
}

###
